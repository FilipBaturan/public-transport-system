{
  "definitions": {},
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "http://public_transport_system/schemes/transportLine.json",
  "type": "object",
  "title": "Transport Line",
  "description": "Represents the transport line available in public transport system",
  "required": [
    "id",
    "name",
    "type",
    "stations",
    "schedule",
    "active",
    "zone"
  ],
  "properties": {
    "id": {
      "$id": "#/properties/id",
      "type": ["integer", "null"],
      "title": "Id",
      "description": "Transport line id",
      "default": 0,
      "examples": [
        1
      ],
      "minimum": 0,
      "multipleOf": 1
    },
    "name": {
      "$id": "#/properties/name",
      "type": "string",
      "title": "Name",
      "description": "Transport line name",
      "default": "",
      "maxLength": 30,
      "examples": [
        "test"
      ],
      "pattern": "^(.*)$"
    },
    "type": {
      "$id": "#/properties/type",
      "type": "string",
      "title": "Type",
      "description": "Transport line type",
      "default": "BUS",
      "enum": ["BUS", "METRO", "TRAM"],
      "examples": [
        "BUS", "METRO", "TRAM"
      ]
    },
    "stations": {
      "$id": "#/properties/stations",
      "type": "array",
      "minItems": 2,
      "title": "Stations",
      "description": "Transport line stations",
      "items": {
        "$id": "#/properties/stations/items",
        "type": "object",
        "title": "Station",
        "description": "Transport line station",
        "$ref": "http://localhost:8080/schemes/station.json"
      }
    },
    "schedule": {
      "$id": "#/properties/schedule",
      "type": "array",
      "title": "Schedule",
      "description": "Transport line schedule",
      "minItems": 1,
      "items": {
        "$id": "#/properties/schedule/items",
        "type": "object",
        "title": "Schedule item",
        "$ref": "http://localhost:8080/schemes/schedule.json"
      }
    },
    "active": {
      "$id": "#/properties/active",
      "type": "boolean",
      "title": "Active",
      "description": "indicates is transport line exist in database",
      "default": true,
      "examples": [
        true
      ]
    },
    "zone": {
      "$id": "#/properties/zone",
      "type": "integer",
      "title": "Zone",
      "description": "Transport line zone",
      "default": 0,
      "examples": [
        1
      ]
    }
  }
}
